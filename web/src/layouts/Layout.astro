---
import '@fontsource-variable/geist-mono'
import '../styles/index.css'

import JSConfBanner from '@components/ui/JSConfBanner.astro'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='Tailwind plugin to add easily animations to your website'
    />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='theme-color' content='#0099ff' />
    <meta name='og:title' content={title} />
    <meta
      name='og:description'
      content='Tailwind plugin to add easily animations to your website'
    />
    <meta name='og:image' content='/og.jpg' />
    <meta name='twitter:card' content='summary_large_image' />
    <title>{title}</title>

    <script is:inline>
      const getThemePreference = () => {
        if (
          typeof localStorage !== 'undefined' &&
          localStorage.getItem('theme')
        ) {
          return localStorage.getItem('theme')
        }
        return 'dark'
      }

      const isDark = getThemePreference() === 'dark'
      document.documentElement.classList.toggle('dark', isDark)
    </script>
  </head>
  <body
    class='relative h-fit w-full bg-white text-slate-900 transition-colors duration-300 dark:bg-[#050505] dark:text-slate-50'
  >
    <slot />
    <JSConfBanner />
  </body>
</html>
